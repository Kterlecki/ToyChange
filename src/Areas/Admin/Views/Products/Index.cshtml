@model IEnumerable<ToyChange.Models.Item>

@{
    ViewData["Title"] = "Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Items</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
            <th>Item Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                
                <td>
                    @item.Price.ToString("C2")
                </td>
                <td>
                    <img src="@item.ImageUrl" width="100" alt="Error">
                </td>
                <td>
                    @item.ItemCategory
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ItemId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ItemId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ItemId" class= "confirmDeletion">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
